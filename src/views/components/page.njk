@page {
  size: A4;
  margin: 5mm 5mm 25mm;
  padding: 0 0 4mm;
  background-color: #f5f4ef;
  @bottom-left {
    background-color: #0a8a97;
    content: element(logoFooter);
  }
  @bottom-center {
    font-family: monospace;
    color: #f3f3f3;
    background-color: #0a8a97;
    content: counter(page) "/" counter(pages);
  }
  @bottom-right {
    background-color: #0a8a97;
    content: element(footer);
  }
  @bottom-left-corner {
    content: "";
    background-color: #0a8a97;
  }
  @bottom-right-corner {
    content: "";
    background-color: #0a8a97;
  }
}